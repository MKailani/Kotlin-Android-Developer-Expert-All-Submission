<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:contentPaddingLeft="@dimen/margin_15dp"
        app:contentPaddingRight="@dimen/margin_15dp"
        app:contentPaddingTop="@dimen/margin_25dp"
        app:contentPaddingBottom="@dimen/margin_25dp"
        app:cardElevation="@dimen/elevation_shadow_2dp"
        app:cardCornerRadius="@dimen/margin_10dp"
        app:cardUseCompatPadding="false"
        android:layout_marginBottom="@dimen/margin_10dp"
        app:cardBackgroundColor="@android:color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Wed, 27 Januari 2018"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingStart="@dimen/margin_10dp"
                android:paddingEnd="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp"/>

        <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="21:00"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingStart="@dimen/margin_10dp"
                android:paddingEnd="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp"
                android:textStyle="bold"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_10dp"
                android:weightSum="1">

            <TextView
                    android:id="@+id/tvHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Barcelona"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:layout_weight="0.35"/>

            <TextView
                    android:id="@+id/tvHomeScore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="100"
                    android:textAlignment="textEnd"
                    android:layout_weight="0.1"/>

            <TextView
                    android:id="@+id/tvVs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/versus"
                    android:textAlignment="center"
                    android:layout_weight="0.1"/>


            <TextView
                    android:id="@+id/tvAwayScore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="100"
                    android:textAlignment="textStart"
                    android:layout_weight="0.1"/>
            <TextView
                    android:id="@+id/tvAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    tools:text="Real Madrid"
                    android:layout_weight="0.35"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
